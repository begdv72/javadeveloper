import java.util.Locale;
import java.util.Scanner;

public class TestScanner {
    public static void main(String[] args) {
        System.out.println("Введите число:");
        int i;
        while (true) {
            if(scanner.hasNextInt()){
                i = scanner.nextInt();
                break;
            }
            else {
                scanner.nextLine();
            }
        }
        System.out.println("echo: " + i);
    }
}
